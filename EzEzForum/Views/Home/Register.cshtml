@{
    ViewData["Title"] = "Home Page";
    if (Authentication.isAdmin(@ViewBag.HttpContext)) {
        Layout = "_AdminLayout";
    } else if (Authentication.isUser(@ViewBag.HttpContext)) {
        Layout = "_MemberLayout";
    }
}
@using EzEzForum.Infrastructure
<h1>Register</h1>

@if (ViewBag.failed) {
    <p class="text-danger">Error: Please try again</p>
}

<form action="/Home/RegisterPost" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="exampleInputEmail1">Email:</label>
        <input type="email" class="form-control" name="User" placeholder="">
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Password:</label>
        <input type="password" class="form-control pass" name="Pass" placeholder="">
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Confirm Password:</label>
        <input type="password" class="form-control pass" name="ConfirmPass" placeholder="">
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>
